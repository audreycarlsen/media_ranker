<%= form_for(@movie) do |f| %>

  <p><%= label_tag :title %><br />
     <%= f.text_field :title %></p>

  <p><%= label_tag :director %><br />
     <%= f.text_field :director %></p>

  <p><%= label_tag :synopsis %><br />
     <%= f.text_area :synopsis %></p>

  <p><%= f.submit('SAVE', class: 'btn btn-success btn-sm')%></p>
<% end %>