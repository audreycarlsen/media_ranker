<h1>movies#index</h1>

<table>
  <tr>
    <th>Rank</th>
    <th>Title</th>
    <th>Upvote</th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.rank %></td>
      <td><%= link_to "#{movie.title}", movie_path(movie.id) %></td>
      <td><%= button_to "Upvote", upvote_movie_path(movie.id), method: :patch %>
    </tr>
  <% end %>
</table>

<p><%= button_to 'Add a Movie', new_movie_path, method: :get %></p>

<p><%= button_to "View All Media", root_path, method: :get %></p>