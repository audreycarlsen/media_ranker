<h1>All Books</h1>

<table>
  <tr>
    <th>Rank</th>
    <th>Title</th>
    <th>Upvote</th>
  </tr>
  <% @books.order(:rank).reverse.each do |book| %>
    <tr>
      <td><%= book.rank %></td>
      <td><%= link_to "#{book.title}", book_path(book.id) %></td>
      <td><%= button_to "Upvote", upvote_book_path(book.id), method: :patch %>
    </tr>
  <% end %>
</table>

<p><%= button_to 'Add a Book', new_book_path, method: :get %></p>

<p><%= button_to 'View All Media', root_path, method: :get %></p>