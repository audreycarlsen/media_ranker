<h1><%= @book.title %></h1>
<p class="lead text-muted">Written by: <%= @book.author %><br>
  Ranked: <%= @book.rank %></p>
<p><%= @book.description %></p>

<br>

<p><%= link_to "UPVOTE", upvote_book_path(@book.id), method: :patch, class: 'btn btn-success btn-sm' %>

<%= link_to "EDIT", edit_book_path(@book.id), class: 'btn btn-info btn-sm' %>

<%= link_to "DELETE", delete_book_path(@book.id), method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-sm' %></p>

<p><%= link_to "View All Books", books_path, class: 'btn btn-default btn-sm' %>

  <%= link_to "View All Media", root_path, class: 'btn btn-default btn-sm' %></p>