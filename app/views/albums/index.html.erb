<h1>All Albums</h1>

<table class='table'>
  <tr>
    <th>Rank</th>
    <th>Title</th>
    <th>Upvote</th>
  </tr>
  <% @albums.order(:rank).reverse.each do |album| %>
    <tr>
      <td><%= album.rank %></td>
      <td><%= link_to "#{album.title}", album_path(album.id) %></td>
      <td>
        <%= form_for album do |f| %>
          <%= f.hidden_field :upvote %>
          <%= f.submit "UPVOTE", class: 'btn btn-success btn-sm' %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'Add an Album', new_album_path, class: 'btn btn-default' %>

  <%= link_to 'View All Media', root_path, class: 'btn btn-default' %></p>