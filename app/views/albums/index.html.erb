<h1>All Albums</h1>

<table>
  <tr>
    <th>Rank</th>
    <th>Title</th>
    <th>Upvote</th>
  </tr>
  <% @albums.order(:rank).reverse.each do |album| %>
    <tr>
      <td><%= album.rank %></td>
      <td><%= link_to "#{album.title}", album_path(album.id) %></td>
      <td><%= button_to "Upvote", upvote_album_path(album.id), method: :patch %>
    </tr>
  <% end %>
</table>

<p><%= button_to 'Add an Album', new_album_path, method: :get %></p>

<p><%= button_to 'View All Media', root_path, method: :get %></p>