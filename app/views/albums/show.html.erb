<h1><%= @album.title %></h1>
<p class="lead text-muted">Recorded by: <%= @album.artist %><br>
  Ranked: <%= @album.rank %></p>
<p><%= @album.description %></p>

<br>

<p>
<%= form_for @album do |f| %>
  <%= f.hidden_field :upvote %>
  <%= f.submit "UPVOTE", class: 'btn btn-success btn-sm' %>
<% end %>
</p>

  <%= link_to "EDIT", edit_album_path(@album.id), class: 'btn btn-info btn-sm' %>

  <%= link_to "DELETE", delete_album_path(@album.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></p>

<p><%= link_to "View All Albums", albums_path, class: 'btn btn-default btn-sm' %>

  <%= link_to "View All Media", root_path, class: 'btn btn-default btn-sm' %></p>